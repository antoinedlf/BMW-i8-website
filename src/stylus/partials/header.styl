
.menu-toggle
  display none
.mobile-bar
  z-index 10
  position fixed
  top 0
  left 0
  padding 0 1.5rem
  width 100%
  height 100px
  color $white
  background-color $black
  li
    display inline-block
    margin-right 6%
    margin-top 1.4rem
    vertical-align middle
  .mobile-title
    font-size 1.4rem
    a
      color $white

@media (max-width: 940px)
  .mobile-bar
    height 80px
  .header
    background-color $black !important
    z-index 3
    .main-nav
      flex-direction column
      align-items stretch
    .BMW-li-logo
      height 80px
    ul li
      text-align left
      font-size 1.5rem
      border-top 1px rgba(254, 254, 254, 0.2) solid
      color $white
      a
        padding 2.8rem
        font-size 1.6rem
        color $white
        background-color transparent
      .BMW-logo
        padding 2rem


/**** Menu Icon ****/
.menu-icon
  display block
  right 2rem
  top 3rem
  position fixed
  width 2rem
  height 0%
  cursor pointer
  -webkit-transition -webkit-transform 300ms ease-in
  transition -webkit-transform 300ms ease-in
  transition transform 300ms ease-in
  transition transform 300ms ease-in, -webkit-transform 300ms ease-in
  >span
    display block
    position absolute
    top 55%
    margin-top -0.5em
    width 100%
    height 0.2em
    background-color $white
    -webkit-transition -webkit-transform 300ms ease-in
    transition -webkit-transform 300ms ease-in
    transition transform 300ms ease-in
    transition transform 300ms ease-in, -webkit-transform 300ms ease-in
    &:before, &:after
      content ""
      position absolute
      width 100%
      height 100%
      background-color $white
      -webkit-transition: -webkit-transform 300ms ease
      transition -webkit-transform 300ms ease
      transition transform 300ms ease
      transition transform 300ms ease, -webkit-transform 300ms ease
    &:before
      -webkit-transform: translateY(-0.6em)
      transform translateY(-0.6em)
    &:after
      -webkit-transform: translateY(0.6em)
      transform translateY(0.6em)

/**** Menu Icon Effects ****/
.menu-toggle:checked
  +.mobile-bar
    .menu-icon
      -webkit-transform rotate(45deg)
      transform rotate(45deg)
    span
      &:before, &:after
        -webkit-transform rotate(90deg)
        transform rotate(90deg)
  ~ .header
    visibility visible
    opacity 1
    -webkit-transition-delay 0s
    transition-delay 0s


/***** Header ****/
.header
  visibility hidden
  opacity 0
  position fixed
  width 100%
  height 100%
  background-color $white
  overflow-y scroll
  text-align center
  color $warm-grey
  -webkit-transition opacity 300ms ease-in, visibility 0s ease-in 300ms
  transition opacity 300ms ease-in, visibility 0s ease-in 300ms
  a
    display block
    font-size 0.9rem
    padding 1rem
    -webkit-transition color 300ms ease-in
    transition color 300ms ease-in
    &:hover
      color $blue
  .active
    color $blue


@media (min-width: 940px)
  .mobile-bar
    display none
  .header
    z-index 5
    width 100%
    height auto
    overflow auto
    visibility visible
    opacity 1
    .logo
      display flex
      justify-content flex-start
      align-items center
      flex 1
      a
        padding 1rem 1.2rem
    .item
      flex 1
      justify-content flex-end
      flex-basis 70%
    ul
      display flex
      flex-wrap wrap

    li
      display inline-block
      border none
    img
      vertical-align middle
      display inline-block
    a
      display block
      text-align center
      color $grey
      vertical-align middle
    .main-nav
      display flex
      padding 0rem 10rem
      align-items center
