/**** Mobile Bar ****/
.menu-toggle
  display none
.mobile-bar
  z-index 10
  position fixed
  top 0
  left 0
  padding 0 25px
  width 100%
  height 100px
  color $white
  background-color $black
  li
    display inline-block
    margin-right 6%
    margin-top 25px
    vertical-align middle
  .mobile-title
    font-size 2rem
    color $white

@media (max-width: 940px)
  .mobile-bar
    height 80px
  .header
    background-color $black !important
    z-index 3
    .main-nav
      flex-direction column
      align-items stretch
    .BMW-li-logo
      height 80px
    ul li
      text-align left
      font-size 1.5rem
      border-top 1px rgba(254, 254, 254, 0.2) solid
      color $white
      a
        padding 3rem
        font-size 1.6rem
        color $white
        background-color transparent
      .BMW-logo
        padding 35px


/**** Menu Icon ****/
.menu-icon
  display block
  right 30px
  top 50px
  position fixed
  width 30px
  height 0%
  cursor pointer
  -webkit-transition -webkit-transform 300ms ease-in
  transition -webkit-transform 300ms ease-in
  transition transform 300ms ease-in
  transition transform 300ms ease-in, -webkit-transform 300ms ease-in
  >span
    display block
    position absolute
    top 55%
    margin-top -0.3em
    width 100%
    height 0.2em
    background-color $white
    -webkit-transition -webkit-transform 300ms ease-in
    transition -webkit-transform 300ms ease-in
    transition transform 300ms ease-in
    transition transform 300ms ease-in, -webkit-transform 300ms ease-in
    &:before, &:after
      content ""
      position absolute
      width 100%
      height 100%
      background-color $white
      -webkit-transition: -webkit-transform 300ms ease
      transition -webkit-transform 300ms ease
      transition transform 300ms ease
      transition transform 300ms ease, -webkit-transform 300ms ease
    &:before
      -webkit-transform: translateY(-0.6em)
      transform translateY(-0.6em)
    &:after
      -webkit-transform: translateY(0.6em)
      transform translateY(0.6em)

/**** Menu Icon Effects ****/
.menu-toggle:checked
  +.mobile-bar
    .menu-icon
      -webkit-transform rotate(45deg)
      transform rotate(45deg)
    span
      &:before, &:after
        -webkit-transform rotate(90deg)
        transform rotate(90deg)
  ~ .header
    visibility visible
    opacity 1
    -webkit-transition-delay 0s
    transition-delay 0s


