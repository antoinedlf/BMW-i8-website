$black = #000
$grey = #6f7480
$warm-grey = #8c8c8c
$blue = #1c69d4
$white = #fefefe

$font = 'ApercuPro'
$opensans = 'Open Sans'
$bold = 'Apercu Pro'

@font-face
   font-family Apercu Pro
   font-style normal
   src url(../fonts/ApercuPro.otf)

@font-face
   font-family Apercu Pro
   font-style bold
   src url(../fonts/ApercuPro-Bold.ttf)


/***** Basic *****/

*
  padding 0
  margin 0
  -webkit-box-sizing border-box
  box-sizing border-box
  &:before, &:after
    padding 0
    margin 0
    -webkit-box-sizing border-box
    box-sizing border-box
html
  width 100%
  height 100%
  overflow-x hidden
body
  width 100%
  height 100%
  overflow-x hidden
  background-color $black
  font-family $font, $opensans, sans-serif
  color warm-grey
ol, ul
  list-style none
a
  text-decoration none
  color $blue
h1
  margin 1em 0
  font-size 2rem

h2
  font-size 1.6rem
  color $grey

.surtitre
  font-size 1rem
  color $blue
  font-family $bold

