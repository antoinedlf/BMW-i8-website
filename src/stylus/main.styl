/**---- Mobile Bar ----**/
.menu-toggle
  display none
.mobile-bar
  z-index 10
  position fixed
  top 0
  left 0
  padding 0 25px
  width 100%
  height 100px
  color $white
  background-color $black
  -webkit-box-shadow 0 0 5px rgba(0, 0, 0, 0.3)
  box-shadow 0 0 5px rgba(0, 0, 0, 0.3)
  li
    display inline-block
    margin-right 6%
    margin-top 25px
    vertical-align middle
  .mobile-title
    font-size 2rem

@media (max-width: 940px)
  .mobile-bar
    height 80px
  .header
    background-color $black !important
    z-index 3
    .BMW-li-logo
