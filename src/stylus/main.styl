/***** Basic *****/

*
  padding 0
  margin 0
  -webkit-box-sizing border-box
  box-sizing border-box
  &:before, &:after
    padding 0
    margin 0
    -webkit-box-sizing border-box
    box-sizing border-box
html
  width 100%
  height 100%
  overflow-x hidden
body
  width 100%
  height 100%
  overflow-x hidden
  background-color $black
  font-family $font, $opensans, sans-serif
  color $warm-grey
ol, ul
  list-style none
a
  text-decoration none
  color $blue
h1
  margin 1em 0
  font-size 2rem
h2
  font-size 1.6rem
  color $grey


/***** SLIDES *****/

body
  &.slider__body
    margin 0
    padding 0
    overflow hidden

.slider__container
  position relative
  display block
  height 100%
  width 100%
  margin 0
  padding 0

.slider__container section>span
    position absolute
    top 30%
    left 15%
    font-size 5vw
    color $white

.slider__container section
    position relative
    width 100%
    height 100%
