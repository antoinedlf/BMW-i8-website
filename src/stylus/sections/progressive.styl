/*** Youtube popup ****/

  .lightbox
      background-color rgba(0, 0, 0, 0.9)
      overflow scroll
      position fixed
      z-index 1
      bottom 0
      right 0
      left 0
      top 0

  .modal-overlay
    position fixed;
    z-index 99
    visibility visible
    opacity 1
    -webkit-transition opacity 0.6s cubic-bezier(0.55, 0, 0.1, 1), visibility 0.6s cubic-bezier(0.55, 0, 0.1, 1)
    transition opacity 0.6s cubic-bezier(0.55, 0, 0.1, 1), visibility 0.6s cubic-bezier(0.55, 0, 0.1, 1)

  .modal-overlay.is-hidden
    visibility hidden
    opacity 0
    opacity: 0;
    -webkit-backface-visibility hidden
    backface-visibility hidden

  .lightbox-container
      position relative
      max-width 61.25rem
      margin 10% auto
      display block
      padding 0 3%
      height auto
      z-index 10
      margin-top 8rem

  .lightbox-content
      box-shadow 0 0.0625rem 0.375rem rgba(0, 0, 0, 0.7)

  .lightbox-close
      background transparent
      position absolute
      font-weight 300
      font-size 2rem
      display block
      cursor pointer
      border none
      color $white
      right 4%
      top -3rem
  .video-container
      padding-bottom 55%
      position relative
      overflow hidden
      height 0

  .video-container iframe,
  .video-container object,
  .video-container embed
      position absolute
      height 100%
      width 100%
      left 0
      top 0

/*** Section progressive ****/

#progressive
  background-image url(../img/bkg.jpg)
  background-repeat no-repeat
  background-size cover
  background-position center
  height 100vh
  +large()
    height auto
  .progressive__content
    margin-left 10%
    h1
      font-size 1.425rem
      font-weight 500
      text-align left
      color $blue
      padding-top 5.75rem
    h2
      font-size 1.625rem
      text-align left
      font-weight 500
      color $white
      width 16rem
      +medium()
        width 38rem
        font-size 3rem
    .progressive__texte
      color $blue
      font-size $lfont
      font-weight 500
      padding 1.5rem 0rem
      background none
      border none
      cursor pointer
      transition 0.3s ease all
      &:before
        margin-right 0.9375rem
        content ''
        background-image url(../img/arrow.png)
        width 0.8125rem
        height 0.8125rem
        display inline-block
        background-repeat no-repeat
        background-size cover
        background-position center
      &:hover
        padding-left 0.625rem
    :focus
      outline none
  .progressive__picture
    width 100vw
    height 13.4375rem
    display: flex;
    justify-content: center;
    align-items: center;
    +medium()
      padding-top 25%
    +large()
      padding-top 0
    .progressive__pic
      position absolute
      max-width 100vw
      pointer-events none
      opacity 0
      animation: apparition-bottom 2s 1.5s cubic-bezier(0.75, 0, 0.25, 1) forwards;
    .progressive__pic2
      position absolute
      right 5%
      top 53%
      pointer-events none
      max-width 41vw
      opacity 0
      animation: apparition-left 2s 2s cubic-bezier(0.75, 0, 0.25, 1) forwards;
      +medium()
        top 47%
      +large()
        right 20%
        top 43%
  .progressive__pic3
    display block
    padding-top 20%
    text-align center
    padding-bottom 7%
    a
      color $grey
    +medium()
      padding-top 44%
    +large()
      padding-top 15%
      margin-top 1rem
    p
      font-size 1.125rem
@keyframes apparition-left {
    0% {transform: translateX(-6.25rem); opacity: 0;}
    100% {transform: translateX(0); opacity: 1;}
}

@keyframes apparition-bottom {
    0% {transform: translateY(1.25rem); opacity: 0;}
    100% {transform: translateY(0); opacity: 1;}
}

@keyframes scale-r {
    0% {transform: scale(3);}
    50% {transform: scale(6);}
    100% {transform: scale(3);}
}
