/*** Youtube popup ****/

  .lightbox
      background-color rgba(0, 0, 0, 0.9)
      overflow scroll
      position fixed
      z-index 1
      bottom 0
      right 0
      left 0
      top 0

  .modal-overlay
    position fixed;
    z-index 99
    visibility visible
    opacity 1
    transition all 0.6s ease-in

  .modal-overlay.is-hidden
    visibility hidden
    opacity 0

  .lightbox-container
      position relative
      max-width 1200px
      margin 10% auto
      display block
      padding 0 3%
      height auto
      z-index 10

  @media screen and (max-width: 768px)
      .lightbox-container
          margin-top 10%

  @media screen and (max-width: 414px)
      .lightbox-container
          margin-top 13%

  .lightbox-content
      box-shadow 0 1px 6px rgba(0, 0, 0, 0.7)

  .lightbox-close
      background transparent
      position absolute
      font-weight 300
      font-size 2rem
      display block
      cursor pointer
      border none
      color $white
      top -3rem
      right 4%
  .video-container
      padding-bottom 55%
      position relative
      overflow hidden
      height 0

  .video-container iframe,
  .video-container object,
  .video-container embed
      position absolute
      height 100%
      width 100%
      left 0
      top 0

