#findCar
  height auto
  .findCar__intro
    height 31.25rem
    background-image url("/img/P90133048-highRes.jpg")
    background-size cover
    display flex
    flex-wrap wrap
    align-items center
    padding 1rem 2rem
    &:before
      content ''
      position absolute
      width 100%
      height 31.25rem
      left 0
      top 0
      background $black
      opacity 0.8
      z-index 1
    .findCar__introtitle
      font-size 1rem
      color $blue
      font-weight 300
      margin 1em 0
      z-index 2
      width 100%
      text-align center
    p
      line-height 1.5
      z-index 2
      font-size 2rem
      color $white
      text-align center
      width 100%
    .findCar__tab
      margin auto
      z-index 2
      .findCar__search
        padding-left 1rem
        width 20rem
        height 3.75rem
        background-color $white
        color $black
        outline none
        +large()
          width 25rem
  .technical__map
    height 70%
    width 100%
  #map
    width 100%
    height 43.75rem
    background gray
    border-top 0.3125rem solid $blue
