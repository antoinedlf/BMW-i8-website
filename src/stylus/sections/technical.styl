#technical
  background $technical
  height auto !important
  #technical__introtitle
    font-size 1.5rem
    color $blue
    padding 1rem
    line-height 3
  .technical__introduction
    margin-left 15px
  .technical__toggle
    position absolute
    right 0
    margin-top -1rem
    transform translate(-20px,-60px)
    cursor pointer
    outline none
  #more-technical
    width 50px
    @media (max-width: 600px)
      #technical__intro
        font-size $sfont
        color $warm-grey
        line-height 1.5
        text-align left
        margin-left 1rem
  .circle-car
    position relative
    z-index 0
    display flex
    align-items center
    justify-content center
    padding-top 10%
    +large()
      padding-top 1%
    img
      width 100%
      padding-top 15%
      margin auto
      +large()
        width 60%
        padding-top 5%
    &:before
      content ''
      display inline-block
      position absolute
      width 300px
      z-index -1
      height 300px
      background #1c69d4
      border-radius 100%
      +medium()
        width 600px
        height 600px
      +large()
        width 500px
        height 500px
    .point
      width 20px
      height 20px
      position absolute
      display flex
      transform translate(-50px, 40px)
      +medium()
        transform translate(-80px, 70px)
      +large()
        width 30px
        height 30px
        transform translate(-90px, 50px)
      &:hover
        p
          visibility visible
          opacity 1
          transform translateY(10px)
          font-size 1rem
          color $blue
          display block
          &:before
            content ''
            background $blue
            position absolute
            width 100px
            height 2px
            top 5px
          strong
            position absolute
            left 100px
            bottom 10px
            font-size 1rem
            color $warm-grey
      p
        visibility hidden
        opacity 0
        transition visibility 0s, opacity 0.5s, width 1s ease
    .point2
      width 20px
      height 20px
      position absolute
      display flex
      transform translate(-120px, 0px)
      +medium()
        transform translate(-250px, 0px)
      +large()
        width 30px
        height 30px
        transform translate(-300px, 0px)
      &:hover
        p
          visibility visible
          opacity 1
          transform translateY(10px)
          display block
          &:before
            content ''
            background $blue
            position absolute
            width 90px
            height 2px
            bottom 60px
            right 0
            transform rotate(50deg)
          strong
            position absolute
            right 0
            bottom 100px
            font-size 1rem
            color $warm-grey
      p
        visibility hidden
        opacity 0
        transition visibility 0s, opacity 0.5s, width 1s ease
  .technical-infos
    padding 10px
    display flex
    flex-wrap wrap-reverse
    overflow hidden
    align-items center
    justify-content center
  .tech__group
    text-align center
    width 50%
    padding 5%
    +large()
      width auto
    .tech__title
      color $blue
      font-family $letter
      font-size 2.5rem
      line-height 1.5
      letter-spacing 9px
    .tech__text
      color $warm-grey
      display block
      text-align center
      font-size 1rem
  .technical__data__hidden
    display none
    transition all ease 0.3s
  .technical__data
    display block
    transition all ease 0.3s
    .technical__base
      background-color #fafafa
      .technical__toggle__bis
        position absolute
        right 0
        margin-top 1rem
        transform translateX(-20px) rotate(45deg)
        cursor pointer
        outline none
      .element__wrap
        padding 3rem 3rem
        margin-left 15px
        margin-right 15px
        border-bottom 1px solid $warm-grey
        .element__text
          font-size 1rem
          color $warm-grey
          line-height 1.5
          text-align left
          strong
            font-size 1rem
            color $blue
            padding-left 15px
            +medium()
              padding-left 10%
            +large()
              padding-left 30%
          +medium()
            text-align right
            line-height 2
    .technical__download
      padding 3rem 3rem
      text-align center
      background $white
      button
        width auto
        height auto
        background $blue
        color $white
        padding 1em
        a
          text-transform none
