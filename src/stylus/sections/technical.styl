#technical
  background $technical
  height auto !important
  #technical__introtitle
    padding 1rem
    padding-top 4.375rem
    padding-left 10%
    font-size 1.625rem
    width 99%
    font-weight 500
    text-align left
    color $blue
  .technical__introduction
    padding-left 10%
    font-size: 1rem
    color: $grey
    padding-top 4.375rem
  .technical__toggle
    margin-top -1rem
    position absolute
    right 0
    transform translate(-1.25rem,-3.75rem)
    cursor pointer
    outline none
  #more-technical
    width 3.125rem
    @media (max-width: 37.5rem)
      #technical__intro
        color $warm-grey
        font-size $sfont
        line-height 1.5
        text-align left
        margin-left 1rem
  .technical__circleCar
    position relative
    z-index 0
    display flex
    align-items center
    justify-content center
    padding-top 10%
    +large()
      padding-top 1%
    .technical__carImg
      width 100%
      padding-top 15%
      margin auto
      +large()
        width 60%
        padding-top 5%
    &:before
      content ''
      display inline-block
      position absolute
      width 15.625rem
      z-index -1
      height 15.625rem
      background #1c69d4
      border-radius 100%
      +medium()
        width 37.5rem
        height 37.5rem
      +large()
        width 31.25rem
        height 31.25rem
    .point
      width 1.25rem
      height 1.25rem
      position absolute
      display flex
      transform translate(-3.125rem, 2.5rem)
      img
        width 100%
      +medium()
        transform translate(-5rem, 4.375rem)
      +large()
        width 1.875rem
        height 1.875rem
        transform translate(-5.625rem, 3.125rem)
      &:hover
        .technical__pointData
          opacity 1
      .technical__pointData
        opacity 0
        transition opacity 1s, width 1s ease
        &:before
          content ''
          background $blue
          position absolute
          width 6.25rem
          height 0.125rem
          right -0.625rem
          top 3.125rem
          transform rotate(120deg)
          +large()
            right -2.8125rem
            top 10.625rem
            width 15.625rem
        strong
          position absolute
          left -3.125rem
          top 6.25rem
          font-size 1rem
          color $blue
          +large()
            left -11.25rem
            top 21.875rem
    .point2
      width 1.25rem
      height 1.25rem
      position absolute
      display flex
      transform translate(-11.25rem, 0rem)
      img
        width 100%
      +medium()
        transform translate(-15.625rem, 0rem)
      +large()
        width 1.875rem
        height 1.875rem
        transform translate(-18.75rem, 0rem)
      &:hover
        .technical__pointData
          opacity 1
      .technical__pointData
        opacity 0
        transition opacity 1s, width 1s ease
        &:before
          content ''
          background $blue
          position absolute
          width 90
          height 0.125rem
          bottom 2.8125rem
          right 0
          transform rotate(50deg)
        strong
          position absolute
          right 0
          bottom 5.3125rem
          font-size 1rem
          color $blue
  .technical-infos
    padding 0.625rem
    display flex
    flex-wrap wrap
    overflow hidden
    align-items center
    justify-content center
    +large()
      flex-wrap nowrap
  .tech__group
    text-align center
    width 50%
    padding 5%
    +large()
      width auto
    .tech__title
      color $blue
      font-family $letter
      font-weight 300
      font-size 2.5rem
      line-height 1.5
      letter-spacing 0.5625rem
    .tech__text
      color $warm-grey
      display block
      text-align center
      font-size 1rem
  .technical__data__hidden
    display none
    transition all ease 0.3s
  .technical__data
    display block
    transition all ease 0.3s
    .technical__base
      background-color #fafafa
      .technical__toggle__bis
        position absolute
        right 0
        margin-top 1rem
        transform translateX(-1.25rem) rotate(45deg)
        cursor pointer
        outline none
      .element__wrap
        padding 3rem 3rem
        margin-left 0.9375rem
        margin-right 0.9375rem
        border-bottom 0.0625rem solid $warm-grey
        .element__text
          font-size 1rem
          color $warm-grey
          line-height 1.5
          text-align left
          strong
            font-size $lfont
            color $blue
            padding-left 0.9375rem
            +medium()
              padding-left 10%
            +large()
              padding-left 30%
          +medium()
            text-align right
            line-height 2
    .technical__download
      padding 3rem 3rem
      text-align center
      background $white
      button
        width auto
        height auto
        background $blue
        padding 1em
        border none
        a
          color $white
          text-transform none
