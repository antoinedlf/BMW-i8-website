#BMWseries
  background #eeeeee
  height auto !important
  +large()
    height 36.25rem !important
  .slider
    overflow hidden
    text-align center
    height auto !important
    +large()
      height 36.25rem !important
    .slider__action_center
      display: flex;
      justify-content: center;
      align-items: center;
    .slider__action
      padding-bottom 1rem
      svg
        max-width 2.5rem
        position absolute
        -webkit-transition opacity 0.4s ease-in
        transition opacity 0.4s ease-in
        cursor pointer
      svg
        max-width 2.5rem
        position absolute
      svg:last-child
        right 0.9rem
        margin-top -1.1rem
        +medium()
          margin-top -3rem
        +large()
          top 0rem
          margin-top 0.4rem
      svg:first-child
        margin-top 1.9375rem
        +medium()
          margin-top 0
        +large()
          margin-top 0.4rem
      +large()
        position absolute
    .slider__action__button
        min-width 14rem
        -webkit-appearance none
        padding 1rem
        margin 0 4rem
        font-size $sfont
        background transparent
        text-align center
        letter-spacing 0.0625rem
        border 0
        -webkit-user-select none
        -moz-user-select none
        -ms-user-select none
        user-select none
        -webkit-transition all 0.2s ease
        transition all 0.2s ease
        cursor pointer
        color $blue
        &:hover
          color #357bd8
          border 0.0625rem $blue

    .slider__action__button:hover, .slider__action__button:focus
        outline 0
        text-decoration none
    .slider__tracker
      padding 0
      margin 0
      left 0
      white-space nowrap
      display flex
      -webkit-transition transform 0.3s cubic-bezier(0.6, 0.2, 0.1, 1)
      transition transform 0.3s cubic-bezier(0.6, 0.2, 0.1, 1) 
      +large()
        margin 4rem 0rem
      .slider__content
        min-width 100vw
        img
          max-width 100%
          opacity 0.7
          transition opacity 0.3s ease
          width 21.25rem
          height auto
          padding 2rem 4rem 0rem 4rem
          +medium()
            padding 4rem 1rem 0 1rem
          +medlarge()
            margin-top 0%
        :hover
          opacity 1
        .slider__price
          color $blue
          display flex
          justify-content center
          margin 0.5rem 0rem
          font-size 2.2rem
          font-family $letter
          +large()
            font-size 1.8rem
        .slider__start
          text-transform uppercase
          align-items: center;
          justify-content: center;
          display flex
          margin-top 2rem
          font-weight bold
          color #8c8c8c
          font-size 1.5rem
          +large()
            font-size 1.2rem
        .slider__title
          font-size 1.8rem
          font-weight $bold
          color #292a2e;
          padding-top 3rem
          padding-bottom 1rem
          text-align center
          +large()
            padding-top 0rem
            padding-bottom 0rem
