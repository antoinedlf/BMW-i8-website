#BMWseries
  background #eeeeee
  .slider
    overflow hidden
    text-align center
    .slider__action
      margin-top 2rem
      svg
        max-width 2.5rem
        position absolute
        -webkit-transition opacity 0.4s ease-in
        transition opacity 0.4s ease-in
        cursor pointer
      svg
        max-width 2.5rem
        position absolute
      svg:last-child
        right 0.9rem
        margin-top -1.1rem
        +large()
          top 0rem
          margin-top 0.4rem
      svg:first-child
        margin-top 2rem
        +large()
          margin-top 0.4rem
      +large()
        position absolute
        left 26vw
    .slider__action__button
        min-width 14rem
        -webkit-appearance none
        padding 1rem
        margin 0 4rem
        font-size 14px
        background transparent
        text-align center
        letter-spacing 1px
        border 0
        -webkit-user-select none
        -moz-user-select none
        -ms-user-select none
        user-select none
        -webkit-transition all 0.2s ease
        transition all 0.2s ease
        cursor pointer
        color $blue
        &:hover
            color #357bd8
            border 1px $blue

    .slider__action__button:hover, .slider__action__button:focus
        outline 0
        text-decoration none
    .slider__tracker
      padding 0
      height 100%
      margin 0
      left 0
      white-space nowrap
      display flex
      -webkit-transition transform 0.5s ease
      transition transform 0.5s ease
      +large()
        margin 4rem 0rem
      .slider__content
        min-width 100vw
        img
          max-width 100%
          width 340px
          height auto
          padding 2rem 4rem 0rem 4rem
          +medium()
            padding 4rem 1rem 0 1rem
          +medlarge()
            margin-top 0%
        .slider__price
          color $blue
          display flex
          justify-content center
          margin 0.5rem 0rem
          font-size 2.2rem
          font-family $letter
          +large()
            font-size 1.8rem
        .slider__start
          text-transform uppercase
          align-items: center;
          justify-content: center;
          display flex
          margin-top 2.5rem
          font-weight bold
          color #8c8c8c
          font-size 1.5rem
          +large()
            font-size 1.2rem
        .slider__title
          font-size 1.8rem
          font-weight $bold
          color #292a2e;
          padding-top 3rem
          padding-bottom 1rem
          text-align center
