.frame
    width 100%
    height 100%
    color black
    position relative
    font-size 0
    line-height 0
    overflow hidden
    white-space nowrap
    .slides
      display flex
      li.js_slide
        position relative
        display inline-block
        width 880px
        img.img__crosssel
          margin-top 5rem
          display flex
          justify-content center
          align-items center
          max-width 100%

#BMWseries
  background $white
  padding 6rem 2rem 0rem 2rem
  .bmw__model
    font-size 2.25rem
    color $black
    font-weight 500
    color #292a2e
    text-align center
  p.starting__at
    text-transform uppercase
    display flex
    justify-content center
    margin-top 2rem
    font-weight bold
    color #8c8c8c
    font-size 1.5rem
  p.p__price
    color $blue
    display flex
    justify-content center
    margin-top 0.5rem
    font-size 2.5rem

div.slide1,div.slide2,div.slide3,div.slide4,div.slide5,div.slide6
    margin-top 7rem
