.sk
  padding 0
  margin 0
  font-size 0
  position relative
  left 0
  white-space nowrap
  li
    font-size initial
    height 100%
    vertical-align top
    display inline-flex
    justify-content center
    align-items center

.sk-arrow
  position absolute
  top 50%
  padding-top 100%
  width 34rem
  padding-left 1%
  padding-right 2%
  background-size 28px 49px
  z-index 1000
  cursor pointer
  transition visibility 0s 0s, opacity 0.5s, padding-left 0.5s, padding-right 0.5s
  visibility visible
  opacity 1

.sk-left
  left 0
  transform rotate(180deg) translateY(50%)

.sk-right
  right 0
  transform translateY(-50%)

.sk-button-cont
  transition visibility 0s 0s, opacity 0.5s, bottom 0.5s
  position absolute
  bottom 10px
  left 50%
  transform translateX(-50%)
  z-index 1000
  +medlarge()
    padding-bottom 10%

.sk-button
  display inline-block
  height 10px
  width 10px
  border-radius 50%
  margin 0 3vw
  background #1c69d4
  box-shadow:  0 0 0 2px white, 0 0 0 4px white, 0 0 0 5px #1c69d4
  cursor pointer
  z-index 1000

@supports
  (shape-outside circle)
  .sk-button
	  -webkit-shape-outside circle
    shape-outside circle

#BMWseries
  background $white
  .bmw__model
    font-size 2.25rem
    font-weight 500
    color #292a2e
    padding-top 3rem
    text-align center
    font-family $semibold
  p.starting__at
    text-transform uppercase
    display flex
    justify-content center
    margin-top 2rem
    font-weight bold
    color #8c8c8c
    font-size 1.5rem
  p.p__price
    color $blue
    display flex
    justify-content center
    margin-top 0.5rem
    font-size 2.5rem
    font-family $price

img.img__crosssel
    max-width 100%
    padding 4rem 4rem 0rem 4rem
    top -10%
    +medium()
      padding 4rem 1rem 0 1rem
    +medlarge()
      margin-top 15%

.price__car
    position absolute
    top 58%
    left 50%
    transform translate(-50%, -50%)
    +medium()
      top 35%
    +large()
      top 42%
    +medlarge()
      top 36%
