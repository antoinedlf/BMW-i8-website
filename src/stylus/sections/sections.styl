#sections
  background-color $black
  div
    color $white
    padding 1rem 2rem
    width 100%
    height 15rem
    h1
      font-family $font $opensans
      font-weight 300
      font-size 1.6rem
      opacity 1
      transition all 0.6s ease-in-out
    p
      color $grey
      font-size 0.9rem
      padding-right 3rem
      opacity 1
      transition all 1s ease-in-out
  .nav.nav-sections
    display flex
    flex-direction column
    text-align right
    line-height 2rem
    margin-right 2rem
    margin-top 2rem
    a
      color $grey
      transition all 0.3s ease-in-out
      overflow hidden
      &:after
        content: "";
        display: inline-block;
        height: 1em;
        vertical-align: bottom;
        width: 100%;
        margin-right: -97%;
        margin-left: 0.6rem;
        border-top: 1px solid $grey
        transition all 0.3s ease-in-out
    .active
      color $white
      &:after
        border-top 1px solid $white
        margin-right -92%

  #sections-background
    width 100%
    position absolute
    bottom 0rem
    background-size contain
    background-repeat no-repeat
    background-position left bottom
    transition all 0.4s ease-in-out
    background-image url(../img/slider-1.png)
