#sections
  background-color $black
  +medium()
    height 95%
  .section-content
    color $white
    padding 2rem 2rem
    width 100%
    height 17rem
    opacity 1
    transition all 0.4s ease
    +medium()
      height 30%
    +large()
      height 30%
    h1
      font-family $font $opensans
      font-weight 300
      font-size 1.5rem
      opacity 1
      transition all 0.6s ease-in-out
      +medium()
        margin-left 10%
        font-size 2rem
        width 60%
      +large()
        font-size 2.5rem
        width 40%
    p
      color $grey
      font-size 0.8rem
      padding-right 3rem
      opacity 1
      transition all 1s ease-in-out
      +medium()
        width 60%
        margin-left 10%
        line-height 1.8
        font-size 1rem
      +large()
        line-height 2
        width 40%
  .nav.nav-sections
    display flex
    flex-direction column
    text-align right
    line-height 2rem
    margin-right 2rem
    margin-top 0rem
    z-index 1000
    +medium()
      line-height 3rem
      margin-right 4rem
      margin-top 0rem
    +large()
      margin-top 2rem
    a
      color $grey
      transition all 0.3s ease-in-out
      cursor pointer
      +medium()
        font-size 1.2rem
      &:after
        content: "";
        display: inline-block;
        height: 1rem;
        vertical-align: bottom;
        width: 100%;
        margin-right: -98%;
        margin-left: 0.6rem;
        border-top: 1px solid $grey
        transition all 0.3s ease-in-out
        +medium()
          height 1.4rem
          margin-left: 1.6rem
    .active
      color $white
      &:after
        border-top 1px solid $white
        margin-right -95%

  .sections-background
    width 100%
    height 15rem
    position absolute
    bottom 0rem
    background-size contain
    background-repeat no-repeat
    background-position left bottom
    transition all 0.4s ease-in-out
    background-image url(../img/slider-1.png)
    +medium()
      width 70%
      height 20rem
    +large()
      width 100%
      height 24rem
